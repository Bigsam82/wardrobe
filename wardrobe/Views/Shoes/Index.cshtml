@model IEnumerable<wardrobe.Models.Shoe>

@{
    ViewBag.Title = "Index";
}

<h2>Shoes in "MY CLOSET"</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                    <div class="row">
                        <div class="container-fluid">
                            <img src="@Html.DisplayFor(modelItem=>item.Photo)" style="width:100%; height:100%; max-height:initial"/>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ShoeID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ShoeID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ShoeID })
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>



