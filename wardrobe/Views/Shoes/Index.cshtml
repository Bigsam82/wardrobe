@model IEnumerable<wardrobe.Models.Shoe>

@{
    ViewBag.Title = "Index";
}

<h2>Shoes in "MY CLOSET"</h2>
<p>TO PUT IMAGES IN YOUR CLOSET PLEASE GO TO GOOGLE IMAGES AND FIND A PIC YOU LIKE COPY PICTURE ADDRESS AND PLACE IT INTO PHOTO SLOT</p><!--I used links from google to populate my thumbnails and the way I decided to do it all the user had to do is copy the address of the pic and be able to populate the PHOTO slot in your create page -->
<p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                    <div class="row">
                        <div class="container-fluid"><!--had to customize sizes so that everything it looked nice and aligned-->
                            <img src="@Html.DisplayFor(modelItem=>item.Photo)" style="width:250px; height:265px;"/>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ShoeID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ShoeID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ShoeID })
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>



